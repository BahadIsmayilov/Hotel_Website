 @model HomeIndexVM

    <!-- Hero Section Begin -->
    <section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>@Model.HeroTextSection.Title</h1>
                    <p>
                        @Model.HeroTextSection.Description
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
            @foreach (var heroImg in Model.HeroImgSection)
            {
                <img class="hs-item set-bg" src="~/img/hero/@heroImg.Image" />
            }
    </div>
</section>
    <!-- Hero Section End -->
    <!-- Services Section Begin -->
    <section class="services-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>What We Do</span>
                        <h2>Discover Our Services</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model.ServiceSections)
                {
                    <div class="col-lg-4 col-sm-6">
                        <div class="service-item">
                            <i class="@item.Icon"></i>
                            <h4>@item.Title</h4>
                            <p>
                                @item.Description
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Services Section End -->
    <!-- Home Room Section Begin -->
    <section class="hp-room-section">
        <div class="container-fluid">
            <div class="hp-room-items">
                <div class="row">
                    @foreach (var item in Model.HomeRoomSections)
                    {
                        <div class="col-lg-3 col-md-6">
                            <div class="hp-room-item set-bg" data-setbg="img/room/@item.HomeImageRoomSections.FirstOrDefault().Image"  style="background-image: url("img/room/@item.HomeImageRoomSections.FirstOrDefault().Image");">
                                <div class="hr-text">
                                    <h3>@item.HomeRoomCategorySection.Name</h3>
                                    <h2>@item.Cost$<span>/Pernight</span></h2>
                                    <table>
                                        <tbody>
                                            <tr>
                                                <td class="r-o">Size:</td>
                                                <td>@item.Size ft</td>
                                            </tr>
                                            <tr>
                                                <td class="r-o">Capacity:</td>
                                                <td>Max persion @item.Capacity</td>
                                            </tr>
                                            <tr>
                                                <td class="r-o">Bed:</td>
                                                <td>@item.BedType</td>
                                            </tr>
                                            <tr>
                                                <td class="r-o">Services:</td>
                                                <td>@item.Service.Substring(0,27) ...</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <a asp-action="RoomDetails" asp-route-id="@item.Id" class="primary-btn">More Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section> 
    <!-- Home Room Section End -->
    <!-- Testimonial Section Begin -->
    <section class="testimonial-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Testimonials</span>
                        <h2>What Customers Say?</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <div class="testimonial-slider owl-carousel">
                        @foreach (var item in Model.TestimonialSections)
                        {
                            <div class="ts-item">
                                <p>
                                    @item.Comment
                                </p>
                                <div class="ti-author">
                                    <div class="rating">
                                        <i class="icon_star"></i>
                                        <i class="icon_star"></i>
                                        <i class="icon_star"></i>
                                        <i class="icon_star"></i>
                                        <i class="icon_star-half_alt"></i>
                                    </div>
                                    <h5> - @item.User</h5>
                                </div>
                                <img src="~/img/@item.Image" alt="">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Testimonial Section End -->
    <!-- Blog Section Begin -->
    <section class="blog-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Hotel News</span>
                        <h2>Our Blog & Event</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                @for (int i = 0; i < Model.BlogsSections.Count(); i++)
                {
                    int @day = @Model.BlogsSections.ElementAt(i).TravelDate.Day;
                    int @year = @Model.BlogsSections.ElementAt(i).TravelDate.Year;
                    DateTime @myDate = @Model.BlogsSections.ElementAt(i).TravelDate;
                    string @mon = @myDate.ToString("MMM");

                    <div class="@(i<=2 ? "col-lg-4":"") @(i==4 ? "col-lg-4":"") @(i==3 ? "col-lg-8":"")">
                        <div class="blog-item small-size set-bg" data-setbg="img/blog/@Model.BlogsSections.ElementAt(i).BlogsImageSections.FirstOrDefault().Image" style="background-image: url("img/blog/@Model.BlogsSections.ElementAt(i).BlogsImageSections.FirstOrDefault().Image");">
                            <div class="bi-text">
                                <span class="b-tag">@Model.BlogsSections.ElementAt(i).Title</span>
                                <h4><a href="#">@Model.BlogsSections.ElementAt(i).TravelPlace</a></h4>
                                <div class="b-time"><i class="icon_clock_alt"></i> @day th @mon, @year</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Blog Section End -->
