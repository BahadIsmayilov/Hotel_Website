


@{
    ViewData["Title"] = "ChangePassword";
}


<style>
    form span {
        font-size: 14px;
        color: red;
    }

    ul {
        color: red;
        font-size: 14px;
    }
</style>
@model ChangePasswordVM
 
<section id="login">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-10 col-md-9 col-lg-5 wrapper h-100">
                <form method="POST">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group mb-3 position-relative">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" placeholder="Type your password" class="form-control sign-in-input px-3">
                        <span class="line"></span>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group mb-3 position-relative">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" placeholder="Confirm password" class="form-control sign-in-input px-3">
                        <span class="line"></span>
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <input type="submit" value="Change password" class="mt-4" asp-route-id="@Model.User.Id">
                </form>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <partial name="_ValidationScriptPartials" />
}

