@model AboutTextSection
@{
    ViewData["Title"] = "Edit";
}


<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AboutCompanyActivity"></label>
        <input asp-for="AboutCompanyActivity" class="form-control" />
        <span asp-validation-for="AboutCompanyActivity" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-success btn-lg btn-block" value="Edit" />
    <a asp-action="Index" class="btn btn-primary btn-block btn-lg" style="margin: 30px 0">
        <i class="fas fa-long arrow-alt-left"></i> Back to Index
    </a>
</form>

