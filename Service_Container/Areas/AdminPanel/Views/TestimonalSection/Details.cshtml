@model TestimonialSection
@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <p><b>Image</b></p><img src="~/img/testemonial/@Model.Image" />
        </div>
        <div class="col-12">
            <p><b>UserName</b></p> @Model.User
        </div>
        <div class="col-12">
            <p><b>Comment</b></p> @Model.Comment
        </div>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <a title="Edit HeroText" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-block btn-lg" style="margin: 30px 0">
            <i class="fa fa-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-primary btn-block btn-lg" style="margin: 30px 0">
            <i class="fas fa-long arrow-alt-left"></i> Back to Index
        </a>
    </div>
</div>