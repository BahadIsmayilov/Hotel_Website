@model IEnumerable<TestimonialSection>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row" style="margin: 30px 0;">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-primary btn-block" target="_blank">
                <i class="fa-solid fa-plus"></i> Create New TestimonialSection
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Image</th>
            <th>UserName</th>
            <th>Comment</th>
            <th>UpdateDate</th>
            <th>Tools</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img class="hs-item set-bg" style="width:200px; height:200px;" src="~/img/testemonial/@item.Image" />
            </td>
            <td>
                @item.User
            </td>
            <td>
                @item.Comment.Substring(0, 40) ...
            </td>
            <td>
                @item.Update
            </td>
            <td style="vertical-align:middle; text-align:center;">
                <a title="See Details" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success" target="_blank"><i class="fa fa-eye"></i></a>
                <a title="Edit Testimonial" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" target="_blank"><i class="fa fa-pencil"></i></a>

                @if (@Model.Count() > 1)
                {
                    <a title="Delete Testimonial" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" target="_blank"><i class="fa fa-trash-o"></i></a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>