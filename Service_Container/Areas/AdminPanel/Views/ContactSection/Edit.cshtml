@model ContactInfo
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Header"></label>
        <input asp-for="Header" class="form-control" />
        <span asp-validation-for="Header" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fax"></label>
        <input asp-for="Fax" class="form-control" />
        <span asp-validation-for="Fax" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mail"></label>
        <input asp-for="Mail" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Map"></label>
        <input asp-for="Map" class="form-control" />
        <span asp-validation-for="Map" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-warning btn-lg btn-block" value="Edit" />
    <a asp-action="Index" class="btn btn-primary btn-block btn-lg" style="margin: 30px 0">
        <i class="fas fa-long arrow-alt-left"></i> Back to Index
    </a>
</form>