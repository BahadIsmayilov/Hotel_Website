@model HeroTextSection

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <p><b>Title</b></p> @Model.Title
        </div>
        <div class="col-12">
            <p><b>Description </b> </p> @Model.Description
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <a title="Edit HeroText" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-block btn-lg" style="margin: 30px 0">
            <i class="fa fa-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-primary btn-block btn-lg" style="margin: 30px 0">
            <i class="fas fa-long arrow-alt-left"></i> Back to Index
        </a>
    </div>
</div>