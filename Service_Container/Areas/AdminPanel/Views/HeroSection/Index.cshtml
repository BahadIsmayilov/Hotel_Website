@model HeroTextSection

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <div class="container-fluid">
                        <div class="row" style="margin: 30px 0;">
                            <div class="col-12">
                                <a asp-action="Create" class="btn btn-primary btn-block">
                                    <i class="fas fa-plus"></i> Create New HeroSection
                                </a>
                            </div>
                        </div>
                    </div>

                    <table class="table table-bordered table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>UpdateDate</th>
                                <th>Config</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Model.Title
                                </td>
                                <td>
                                    @Model.Description.Substring(0, 70)...
                                </td>
                                <td>
                                    @Model.UpdateDate
                                </td>
                                <td style="vertical-align:middle; text-align:center;">
                                    <a title="See Details" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-success"><i class="fa fa-eye"></i></a>
                                    <a title="Edit HeroText" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>